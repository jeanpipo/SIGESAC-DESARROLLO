{% extends 'Curso.html.twig' %}

{% block contenido %}

<center><h2>Acreditables</h2></center>
<div class="row">
<center>
	<div class="col-md-12">
	<br>
		<div class="col-md-2 text-left">			
			Codigo:  
			<input type="text"class="form-control" id="codEstudiante" disabled="disabled">
		</div>
		<div class="col-md-4 text-left">
			Estudiante:
			<input type="text" class="form-control" id="estudiante" placeholder="Cedula/Nombre/Apellido">			
		</div>

	</div>
</div>
<center>
<div class="row">
	<div class="col-md-6">
		<h2>Edición</h2>
		<div class="col-md-6 text-left">
			Código de Acreditación: <input type="text" class="form-control" disabled></input>
			Pensum: <input type="text" class="form-control"></input>
			Valor en Unidades de Crédito: <input type="text" class="form-control"></input>
			<br>
		</div>
		<div class="col-md-6 text-left" style="margin-top:13%">
			
			Trayecto: <input type="text" class="form-control"></input>
			Fecha de Acreditación: <input type="text" class="form-control"></input>
		</div>
		<br>
		
		
		 <br>
		 <br>
		 
	</div>	
</div>
<div class="row">
	<div class="col-md-6 text-left">
		Observaciones:
		<textarea id="observacion" class="form-control"></textarea>	
	</div>
</div>
<div class="row">
	<div class="col-md-6 text-left">
		<button class="btn btn-danger">Limpiar</button>
		<button class="btn btn-primary">Nuevo</button>
		<button class="btn btn-success">Guardar</button>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<fieldset class="scheduler-border-1">
			<legend class="scheduler-border">Acreditable</legend>
			
			<table class="table table-hover" id='tablaAcreditable' style='text-align:center;' >

				<tr>
				  <td>N°</td>
				  <td>Codigo</td>
				  <td>Pensum</td>
				  <td>Trayecto</td>
				  <td title="Unidad de Credito">U.C</td>
				  <td>Fecha</td>
				  <td>Descripcion</td>
				</tr>

				<tbody id="listarAcreditable">

	       		</tbody>
	       	</table>

		</fieldset>
	</div>
</div>

{% endblock %}
